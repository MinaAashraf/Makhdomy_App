<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Makhdomy" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:fontFamily">@font/mohammadbold</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/dark_blue</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="Theme.Makhdomy" parent="Base.Theme.Makhdomy" />

    <style name="EndAlignedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="hintTextAppearance">@style/EndAlignedTextLabel</item>
    </style>

    <style name="EndAlignedTextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="RightAlignedTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>
</resources>